    "version": "0.2.0",
    "configurations": [
        {
            "name": "MicroPython: run",
            "type": "python",
            "request": "launch",
            "module": "mpremote",
            "args": ["run", "${file}"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "MicroPython: copy & run",
            "type": "python",
            "request": "launch",
            "module": "mpremote",
            "args": ["fs", "cp", "${file}", ":${file}", "+", "repl"],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}