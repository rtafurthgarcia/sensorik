    "version": "0.2.0",
    "configurations": [
        {
            "name": "MicroPython: connect to the device",
            "type": "python",
            "request": "launch",
            "module": "mpremote",
            "args": ["connect", "auto"],
            "internalConsoleOptions": "openOnSessionStart",
            "console": "internalConsole",
            "justMyCode": true
        },
        {
            "name": "MicroPython: run",
            "type": "python",
            "request": "launch",
            "module": "mpremote",
            "args": ["run", "${file}"],
            "console": "internalConsole",
            "justMyCode": true
        }
    ]
}